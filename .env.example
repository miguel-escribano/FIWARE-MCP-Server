# FIWARE Authentication (OpenStack Keystone)
AUTH_HOST=localhost
AUTH_PORT=15001

# Context Broker
CB_HOST=localhost
CB_PORT=1026

# Credentials (FIWARE_ prefix avoids Windows USERNAME env var conflict)
FIWARE_USERNAME=your_username
FIWARE_PASSWORD=your_password
SERVICE=your_service
SUBSERVICE=/your_subservice

# Optional: Pre-fetched token (auto-refreshes if expired)
AUTH_TOKEN=
